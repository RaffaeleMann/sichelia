      "id": "urn:ngsi-ld:Craft:64deeec3-2b35-4fdd-9f3a-8eb38f110698",
      "type": "Craft",
      "name": {
        "type": "Property",
        "value": "Coltivazione del Sale nella Salina Culcasi"
      },
      "nativeName": {
        "type": "Property",
        "value": ""

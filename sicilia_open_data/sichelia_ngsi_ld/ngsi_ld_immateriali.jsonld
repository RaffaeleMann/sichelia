    {
      "id": "urn:ngsi-ld:Event:0c404efb-39d0-4576-89e2-4b959447265c",
      "type": "Event",
      "name": {
        "type": "Property",
        "value": "la Casazza di Nicosia"
      },
      "nativeName": {
        "type": "Property",

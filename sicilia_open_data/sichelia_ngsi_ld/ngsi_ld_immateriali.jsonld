    {
      "id": "urn:ngsi-ld:Living_national_treasure:e42f5757-42ee-4b2a-b01a-f0ad1f4ad0cf",
      "type": "Living_national_treasure",
      "name": {
        "type": "Property",
        "value": "Antonino Amato: Maestro Argentiere"
      },
      "nativeName": {
        "type": "Property",
        "value": "Nino Amato"

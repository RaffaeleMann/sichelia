    {
      "id": "urn:ngsi-ld:PatronalFestival:1f735817-f169-4e4c-9a67-b6ae2a08a397",
      "type": "PatronalFestival",
      "name": {
        "type": "Property",
        "value": "Festa di San Paolo Apostolo"
      },
      "nativeName": {
        "type": "Property",

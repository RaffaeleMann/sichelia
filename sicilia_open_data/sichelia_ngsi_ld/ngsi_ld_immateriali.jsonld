    {
      "id": "urn:ngsi-ld:Festival:a5f643c0-91ce-4fd9-873a-2e3dd50e357f",
      "type": "Festival",
      "name": {
        "type": "Property",
        "value": "Festa di Maria Santissima Addolorata"
      },
      "nativeName": {
        "type": "Property",

    {
      "id": "urn:ngsi-ld:PatronalFestival:433b2009-925f-405f-ab86-dcfa34ab6c4d",
      "type": "PatronalFestival",
      "name": {
        "type": "Property",
        "value": "Nocciolata"
      },
      "nativeName": {

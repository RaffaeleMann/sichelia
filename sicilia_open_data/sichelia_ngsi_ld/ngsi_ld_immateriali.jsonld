    {
      "id": "urn:ngsi-ld:Festival:7377f779-d9ed-4dcf-b541-9b2354fcdbf0",
      "type": "Festival",
      "name": {
        "type": "Property",
        "value": "Festa di San Giuseppe con Folkloristica Cavalcata"
      },
      "nativeName": {
        "type": "Property",

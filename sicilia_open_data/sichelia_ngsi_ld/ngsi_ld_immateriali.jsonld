    {
      "id": "urn:ngsi-ld:Music:a9532784-b22d-4bd4-add2-421582b4f226",
      "type": "Music",
      "name": {
        "type": "Property",
        "value": "Cantori alla Carrettiera"
      },
      "nativeName": {
        "type": "Property",
        "value": "La canzuna a la carrittera"
      },
      "purpose": {

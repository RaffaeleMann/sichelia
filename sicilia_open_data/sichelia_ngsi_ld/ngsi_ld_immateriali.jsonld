    {
      "id": "urn:ngsi-ld:Sacred_space:ab061360-8d4a-45d8-8f5b-3b4eb68f6bdd",
      "type": "Sacred_space",
      "name": {
        "type": "Property",
        "value": "Luoghi letterari e cinematografici di Montalbano"
      },
      "nativeName": {
